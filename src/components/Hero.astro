---
import { COMPANY } from '../data/company.js';

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'Zuverlässiges Facility Management für Immobilien-Profis',
  subtitle = 'Wir bieten maßgeschneiderte Lösungen in Facility Management, Gebäudereinigung, Gartenpflege und Winterdienst für anspruchsvolle Unternehmen und Immobilienbesitzer.'
} = Astro.props;
---

<section class="hero" aria-labelledby="hero-title">
  <div class="container hero__container">
    <!-- Text Content -->
    <div class="hero__content">
      <h1 id="hero-title" class="hero__title">
        {title}
      </h1>
      <p class="hero__subtitle">
        {subtitle}
      </p>
      <div class="hero__cta">
        <a href="#kontakt" class="btn btn--large btn--primary">
          Angebot anfragen
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
        <a href="#leistungen" class="btn btn--large btn--outline">
          Leistungen entdecken
        </a>
      </div>
    </div>
    
    <!-- Hero Image -->
    <div class="hero__image-wrapper">
      <div class="hero__image-frame">
        <img 
          src="/images/hero.jpeg" 
          alt="Modernes Facility Management" 
          class="hero__image"
          loading="eager"
          width="600"
          height="500"
        />
      </div>
      <!-- Decorative elements -->
      <div class="hero__decoration hero__decoration--1"></div>
      <div class="hero__decoration hero__decoration--2"></div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="hero__scroll" aria-hidden="true">
    <span class="hero__scroll-text">Scrollen</span>
    <div class="hero__scroll-line"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, var(--gray-50) 0%, var(--white) 50%, var(--gray-50) 100%);
    padding-top: 140px;
    padding-bottom: var(--space-12);
    overflow: hidden;
  }
  
  .hero__container {
    display: grid;
    gap: var(--space-12);
    align-items: center;
    width: 100%;
  }
  
  @media (min-width: 1024px) {
    .hero__container {
      grid-template-columns: 1fr 1fr;
      min-height: calc(100vh - 200px);
    }
  }
  
  .hero__content {
    text-align: center;
  }
  
  @media (min-width: 1024px) {
    .hero__content {
      text-align: left;
    }
  }
  
  .hero__title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: var(--brand-1);
    line-height: 1.15;
    margin-bottom: var(--space-6);
    text-wrap: balance;
  }
  
  .hero__subtitle {
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-8);
    max-width: 540px;
    margin-left: auto;
    margin-right: auto;
  }
  
  @media (min-width: 1024px) {
    .hero__subtitle {
      margin-left: 0;
      margin-right: 0;
    }
  }
  
  .hero__cta {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: center;
  }
  
  @media (min-width: 640px) {
    .hero__cta {
      flex-direction: row;
    }
  }
  
  @media (min-width: 1024px) {
    .hero__cta {
      justify-content: flex-start;
    }
  }
  
  .hero__image-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .hero__image-frame {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
    background-color: var(--gray-200);
    aspect-ratio: 6/5;
    width: 100%;
    max-width: 500px;
  }
  
  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Decorative elements */
  .hero__decoration {
    position: absolute;
    border-radius: var(--radius-xl);
    z-index: -1;
  }
  
  .hero__decoration--1 {
    width: 100%;
    height: 100%;
    background-color: var(--brand-1);
    top: 20px;
    right: -20px;
    opacity: 0.1;
  }
  
  .hero__decoration--2 {
    width: 80%;
    height: 80%;
    background-color: var(--brand-2);
    bottom: -15px;
    left: -15px;
    opacity: 0.1;
  }
  
  .hero__scroll {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    color: var(--gray-400);
    z-index: 2;
  }
  
  .hero__scroll-text {
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  .hero__scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, currentColor, transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }
  
  @keyframes scrollPulse {
    0%, 100% {
      opacity: 0.4;
      transform: scaleY(0.8);
    }
    50% {
      opacity: 1;
      transform: scaleY(1);
    }
  }
  
  /* Mobile optimizations */
  @media (max-width: 640px) {
    .hero {
      padding-top: 160px;
    }
    
    .hero__scroll {
      display: none;
    }
  }
</style>
